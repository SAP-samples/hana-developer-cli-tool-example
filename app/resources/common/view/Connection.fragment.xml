<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">


    <Toolbar ariaLabelledBy="Title3">
        <Title id="Title3" text="{i18nReuse>gui.conn}"/>
        <Button icon="sap-icon://refresh" tooltip="{i18nReuse>gui.refreshConn}" press="refreshConnection" />
        <ToolbarSpacer />
    </Toolbar>
    <Label text="{i18nReuse>gui.admin}" tooltip="{i18nReuse>admin}"/>
    <CheckBox selected="{/admin}" tooltip="{i18nReuse>admin}" select="refreshConnection"/>
    <Label text="{i18nReuse>gui.connFile}" tooltip="{i18nReuse>connFile}" />
    <Input value="{/conn}" tooltip="{i18nReuse>connFile}"/>

</core:FragmentDefinition>    