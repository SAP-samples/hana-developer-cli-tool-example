<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Toolbar id="TB1">
        <Title id="Title1" text="{i18n>appTitle}: {config>/cmd}"/>
        <ToolbarSpacer id="spacer1"/>
        <Button id="btnSetTargetReuse" icon="sap-icon://target-group" tooltip="{i18n>btp.setTargetTooltip}" text="{i18n>btp.setTarget}" press="navigateToBtpTarget" />
        <Button id="refreshButton" icon="sap-icon://refresh" tooltip="{i18nReuse>gui.execute}" press="executeCmd" />
    </Toolbar>
</core:FragmentDefinition>    