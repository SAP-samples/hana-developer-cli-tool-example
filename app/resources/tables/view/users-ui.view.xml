<mvc:View controllerName="sap.hanacli.tables.controller.users-ui" height="100%" width="100%"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<ScrollContainer id="scrollContainerUsers" height="100%" width="100%" vertical="true" focusable="true">
		<f:SimpleForm id="SimpleFormToolbarUsers" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="false" ariaLabelledBy="Title1">
			<f:toolbar>
				<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.toolbar" type="XML"/>
			</f:toolbar>
				 <f:content>

				<Toolbar id="targetToolbarUsers" ariaLabelledBy="Title2Users">
					<Title id="Title2Users" text="{i18nReuse>gui.target}"/>
					<ToolbarSpacer id="spacerUsers" />
					<Button id="settingsButtonUsers" icon="sap-icon://settings" tooltip="{i18nReuse>gui.targetDetails}" press=".openUrl('/ui/#systeminfo-ui', true)" />
				</Toolbar>

				<Label id="labelUserUsers" text="{i18nReuse>user}" required="true"/>
				<Input id="User" value="{/user}" showSuggestion="true" suggest="loadUserFilter">
				</Input>
				<Label id="labelLimitUsers" text="{i18nReuse>limit}" required="true"/>
				<Input id="limitUsers" value="{/limit}" />

				<core:Fragment fragmentName="sap.hanacli.common.view.Connection" type="XML"/>
				<core:Fragment fragmentName="sap.hanacli.common.view.Debug" type="XML"/>

			</f:content>
		</f:SimpleForm>

	
	<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.table" type="XML"/>
	</ScrollContainer>
</mvc:View>
