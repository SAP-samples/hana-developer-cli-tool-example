<mvc:View controllerName="sap.hanacli.tables.controller.functions-ui" height="100%" width="100%"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<ScrollContainer id="scrollContainerFunctions" height="100%" width="100%" vertical="true" focusable="true">
		<f:SimpleForm id="SimpleFormToolbarFunctions" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="false" ariaLabelledBy="Title1">
			<f:toolbar>
				<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.toolbar" type="XML"/>
			</f:toolbar>
			 	<f:content>

				<Toolbar id="targetToolbarFunctions" ariaLabelledBy="Title2Functions">
					<Title id="Title2Functions" text="{i18nReuse>gui.target}"/>
					<ToolbarSpacer id="spacerFunctions" />
					<Button id="settingsButtonFunctions" icon="sap-icon://settings" tooltip="{i18nReuse>gui.targetDetails}" press=".openUrl('/ui/#systeminfo-ui', true)" />
				</Toolbar>

				<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.schema" type="XML"/>

				<Label id ="labelFunction" text="{i18nReuse>function}" required="true"/>
				<Input id="Function" value="{/function}" showSuggestion="true" suggest="loadFunctionFilter">
				</Input>
				<Label id="labelLimitFunctions" text="{i18nReuse>limit}" required="true"/>
				<Input id="limitFunctions" value="{/limit}" />

				<core:Fragment fragmentName="sap.hanacli.common.view.Connection" type="XML"/>
				<core:Fragment fragmentName="sap.hanacli.common.view.Debug" type="XML"/>

			</f:content>
		</f:SimpleForm>

	
	<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.table" type="XML"/>
	</ScrollContainer>
</mvc:View>