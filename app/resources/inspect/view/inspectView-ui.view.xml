<mvc:View controllerName="sap.hanacli.inspect.controller.inspectView-ui" height="100%" width="100%"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:table="sap.ui.table"
	xmlns:ce="sap.ui.codeeditor"
	xmlns="sap.m">
	<ScrollContainer id="scrollContainerInspectView" height="100%" width="100%" vertical="true" focusable="true">
		<f:SimpleForm id="SimpleFormToolbarInspectView" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="false" ariaLabelledBy="Title1">
			<f:toolbar>
				<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.toolbar" type="XML"/>
			</f:toolbar>
			<f:content>

				<Toolbar id="targetToolbarInspectView" ariaLabelledBy="Title2InspectView">
					<Title id="Title2InspectView" text="{i18nReuse>gui.target}"/>
					<ToolbarSpacer id="spacerInspectView" />
					<Button id="settingsButtonInspectView" icon="sap-icon://settings" tooltip="{i18nReuse>gui.targetDetails}" press=".openUrl('/ui/#systeminfo-ui', true)" />
				</Toolbar>

				<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.schema" type="XML"/>

				<Label id="labelViewInspectView" text="{i18nReuse>view}" required="true"/>
				<Input id="ViewInspectView" value="{/view}" showSuggestion="true" suggest="loadViewFilter">
				</Input>

				<core:Fragment fragmentName="sap.hanacli.common.view.Connection" type="XML"/>
				<core:Fragment fragmentName="sap.hanacli.common.view.Debug" type="XML"/>

			</f:content>
		</f:SimpleForm>

		<IconTabBar id="idIconTabBarNoIconsInspectView" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter id="iconTabFilterBasicInfoInspectView" text="{i18n>inspect.basicInfo}" key="info">
					<f:SimpleForm id="infoFormInspectView" editable="false" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="false" ariaLabelledBy="Title1">
						<f:content>
							<Label id="labelSchemaInspectView" text="{i18nReuse>scheam}" />
							<Input id="inputSchemaInspectView" value="{resultsModel>/rows/basic/SCHEMA_NAME}" editable="false" />

							<Label id="labelViewInspectViewInTable" text="{i18nReuse>view}" />
							<Input id="inputViewInspectView" value="{resultsModel>/rows/basic/VIEW_NAME}" editable="false" />

							<Label id="labelViewTypeInspectView" text="{i18nReuse>gui.viewType}" />
							<Input id="inputViewTypeInspectView" value="{resultsModel>/rows/basic/VIEW_TYPE}" editable="false" />

							<Label id="labelViewOIDInspectView" text="{i18nReuse>gui.tableOID}" />
							<Input id="inputViewOIDInspectView" value="{resultsModel>/rows/basic/VIEW_OID}" editable="false" />

							<Label id="labelHasParametersInspectView" text="{i18nReuse>gui.hasParameters}" />
							<Input id="inputHasParametersInspectView" value="{resultsModel>/rows/basic/HAS_PARAMETERS}" editable="false" />

							<Label id="labelHasCheckInspectView" text="{i18nReuse>gui.hasCheck}" />
							<Input id="inputHasCheckInspectView" value="{resultsModel>/rows/basic/HAS_STRUCTURED_PRIVILEGE_CHECK}" editable="false" />

							<Label id="labelHasCacheInspectView" text="{i18nReuse>gui.hasCache}" />
							<Input id="inputHasCacheInspectView" value="{resultsModel>/rows/basic/HAS_CACHE}" editable="false" />

							<Label id="labelCreatedInspectView" text="{i18nReuse>gui.created}" />
							<Input id="inputCreatedInspectView" value="{resultsModel>/rows/basic/CREATE_TIME}" editable="false" />


						</f:content>
					</f:SimpleForm>

				</IconTabFilter>
				<IconTabFilter id="iconTabFilterFieldsInspectView" text="{i18nReuse>gui.fields}" key="fields">
					<table:Table id="fieldsTableInspectView" selectionMode="MultiToggle" visibleRowCount="10" enableSelectAll="false" rows="{resultsModel>/rows/fields}" threshold="15" enableBusyIndicator="true">
						<table:noData>
							<BusyIndicator id="busyIndicatorFieldsInspectView" class="sapUiMediumMargin"/>
						</table:noData>
					</table:Table>
				</IconTabFilter>

				<IconTabFilter id="iconTabFilterSQLInspectView" text="{i18nReuse>gui.sql}" key="sql">
					<ce:CodeEditor id="aCodeEditorSQLInspectView" type="sql" value="{resultsModel>/rows/sql}" editable="false" height="auto" maxLines="25" />
				</IconTabFilter>

				<IconTabFilter id="iconTabFilterCDSInspectView" text="{i18nReuse>gui.cds}" key="cds">
					<ce:CodeEditor id="aCodeEditorCDSInspectView" type="javascript" value="{resultsModel>/rows/cds}" syntaxHints="false" editable="false" height="auto" maxLines="25" />
				</IconTabFilter>

				<IconTabFilter id="iconTabFilterHDBTableInspectView" text="{i18nReuse>gui.hdbtable}" key="hdbtable">
					<ce:CodeEditor id="aCodeEditorHDBTableInspectView" type="sql" value="{resultsModel>/rows/hdbtable}" editable="false" height="auto" maxLines="25" />

				</IconTabFilter>
			</items>
		</IconTabBar>

	</ScrollContainer>
</mvc:View>