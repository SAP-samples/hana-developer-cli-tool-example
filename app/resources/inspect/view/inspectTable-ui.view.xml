<mvc:View controllerName="sap.hanacli.inspect.controller.inspectTable-ui" height="100%" width="100%"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:table="sap.ui.table"
	xmlns:ce="sap.ui.codeeditor"
	xmlns="sap.m">
	<ScrollContainer id="scrollContainerInspectTable" height="100%" width="100%" vertical="true" focusable="true">
		<f:SimpleForm id="SimpleFormToolbarInspectTable" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="false" ariaLabelledBy="Title1">
			<f:toolbar>
				<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.toolbar" type="XML"/>
			</f:toolbar>
			<f:content>

				<Toolbar id="targetToolbarInspectTable" ariaLabelledBy="Title2InspectTable">
					<Title id="Title2InspectTable" text="{i18nReuse>gui.target}"/>
					<ToolbarSpacer id="spacerInspectTable" />
					<Button id="settingsButtonInspectTable" icon="sap-icon://settings" tooltip="{i18nReuse>gui.targetDetails}" press=".openUrl('/ui/#systeminfo-ui', true)" />
				</Toolbar>

				<core:Fragment fragmentName="sap.hanacli.tables.view.reuse.schema" type="XML"/>

				<Label id="labelTableInspectTable" text="{i18nReuse>table}" required="true"/>
				<Input id="TableInspectTable" value="{/table}" showSuggestion="true" suggest="loadTableFilter">
				</Input>

				<core:Fragment fragmentName="sap.hanacli.common.view.Connection" type="XML"/>
				<core:Fragment fragmentName="sap.hanacli.common.view.Debug" type="XML"/>

			</f:content>
		</f:SimpleForm>

		<IconTabBar id="idIconTabBarNoIconsInspectTable" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter id="iconTabFilterBasicInfoInspectTable" text="Basic Info" key="info">
					<f:SimpleForm id="infoFormInspectTable" editable="false" layout="ResponsiveGridLayout" adjustLabelSpan="true" singleContainerFullSize="false" ariaLabelledBy="Title1">
						<f:content>
							<Label id="labelSchemaInspectTable" text="{i18nReuse>scheam}" />
							<Input id="inputSchemaInspectTable" value="{resultsModel>/rows/basic/SCHEMA_NAME}" editable="false" />

							<Label id="labelTableBasicInfoInspectTable" text="{i18nReuse>table}" />
							<Input id="inputTableInspectTable" value="{resultsModel>/rows/basic/TABLE_NAME}" editable="false" />

							<Label id="labelTableTypeInspectTable" text="{i18nReuse>gui.tableType}" />
							<Input id="inputTableTypeInspectTable" value="{resultsModel>/rows/basic/TABLE_TYPE}" editable="false" />

							<Label id="labelTableOIDInspectTable" text="{i18nReuse>gui.tableOID}" />
							<Input id="inputTableOIDInspectTable" value="{resultsModel>/rows/basic/TABLE_OID}" editable="false" />

							<Label id="labelHasPrimaryKeyInspectTable" text="{i18nReuse>gui.hasPrimaryKey}" />
							<Input id="inputHasPrimaryKeyInspectTable" value="{resultsModel>/rows/basic/HAS_PRIMARY_KEY}" editable="false" />

							<Label id="labelIsPreloadInspectTable" text="{i18nReuse>gui.isPreload}" />
							<Input id="inputIsPreloadInspectTable" value="{resultsModel>/rows/basic/IS_PRELOAD}" editable="false" />

							<Label id="labelUnloadPriorityInspectTable" text="{i18nReuse>gui.unloadPriority}" />
							<Input id="inputUnloadPriorityInspectTable" value="{resultsModel>/rows/basic/UNLOAD_PRIORITY}" editable="false" />

							<Label id="labelCreatedInspectTable" text="{i18nReuse>gui.created}" />
							<Input id="inputCreatedInspectTable" value="{resultsModel>/rows/basic/CREATE_TIME}" editable="false" />


						</f:content>
					</f:SimpleForm>

				</IconTabFilter>
				<IconTabFilter id="iconTabFilterFieldsInspectTable" text="{i18nReuse>gui.fields}" key="fields">
					<table:Table id="fieldsTableInspectTable" selectionMode="MultiToggle" visibleRowCount="10" enableSelectAll="false" rows="{resultsModel>/rows/fields}" threshold="15" enableBusyIndicator="true">
						<table:noData>
							<BusyIndicator id="busyIndicatorFieldsInspectTable" class="sapUiMediumMargin"/>
						</table:noData>
					</table:Table>
				</IconTabFilter>

				<IconTabFilter id="iconTabFilterConstraintsInspectTable" text="{i18nReuse>gui.constraints}" key="constraints">
					<table:Table id="constraintsTableInspectTable" selectionMode="MultiToggle" visibleRowCount="10" enableSelectAll="false" rows="{resultsModel>/rows/constraints}" threshold="15" enableBusyIndicator="true">
						<table:noData>
							<BusyIndicator id="busyIndicatorConstraintsInspectTable" class="sapUiMediumMargin"/>
						</table:noData>
					</table:Table>
				</IconTabFilter>

				<IconTabFilter id="iconTabFilterSQLInspectTable" text="{i18nReuse>gui.sql}" key="sql">
					<ce:CodeEditor id="aCodeEditorSQLInspectTable" type="sql" value="{resultsModel>/rows/sql}" editable="false" height="auto" maxLines="25" />
				</IconTabFilter>

				<IconTabFilter id="iconTabFilterCDSInspectTable" text="{i18nReuse>gui.cds}" key="cds">
					<ce:CodeEditor id="aCodeEditorCDSInspectTable" type="javascript" value="{resultsModel>/rows/cds}" syntaxHints="false" editable="false" height="auto" maxLines="25" />
				</IconTabFilter>

				<IconTabFilter id="iconTabFilterHDBTableInspectTable" text="{i18nReuse>gui.hdbtable}" key="hdbtable">
					<ce:CodeEditor id="aCodeEditorHDBTableInspectTable" type="sql" value="{resultsModel>/rows/hdbtable}" editable="false" height="auto" maxLines="25" />

				</IconTabFilter>
			</items>
		</IconTabBar>

	</ScrollContainer>
</mvc:View>